CLEANFILES =
SUFFIXES   =

CLEANFILES += *.csv *.dat *.plt
SUFFIXES   += .csv .dat .plt .eps .pdf
.PRECIOUS: %.csv %.dat %.plt


#### implicit rules ####
.csv.dat:
	@echo $<

.dat.plt:
	@echo $<

.plt.eps:
	@gnuplot $<

.plt.pdf:
	@gnuplot $<




# //////////////////////////////////////////////////////////////////////////// #
